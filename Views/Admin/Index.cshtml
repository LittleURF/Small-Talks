@model List<ApplicationUser>

@{
    ViewData["Title"] = "Index";
}
<br />
@if (TempData["TempMessage"] != null)
{
    <partial name="_TempMessagePartial" model="@TempData["TempMessage"].ToString()" />
}
<br />
<br />
<br />

<p>
    <section class="moderators col-md-6 m-auto">
        <h3>Promote user to moderator</h3>
        <div class="row">
            <form asp-action="AddModerator" class="w-100">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-flex flex-nowrap">
                    <input class="form-control d-inline-block mr-2" type="text" name="userName" placeholder="Username..." required />
                    <input class="btn btn-primary" type="submit" value="Add" />
                </div>

            </form>
        </div>
        <br />
        <br />
        <br />
        <h3>Moderators</h3>
        <div class="row">
            <table class="table table-light table-striped table-bordered">
                @foreach (var moderator in Model)
                {
                    <tr>
                        <td>@moderator.UserName</td>
                        <td><a asp-action="RemoveModerator" asp-route-userName="@moderator.UserName"><i class="fas fa-user-minus"></i></a></td>
                    </tr>
                }
            </table>
        </div>

    </section>

